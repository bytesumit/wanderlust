<% layout('./layouts/boilerplate.ejs')%>
<body>
  <div class="form-container">
    <h1>Add New Listing</h1>
    <form method="post" action="/listing" class="listing-form  needs-validation" enctype="multipart/form-data" novalidate>
      <div class="form-group  is-valid">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Enter title" required />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          please provide a title
           </div>
      </div>
      <div class="form-group  is-valid">
        <label for="description">Description</label>
        <textarea id="description" name="description" placeholder="Add description" rows="4" required></textarea>
        <div class="invalid-feedback">
          please provide describtion
           </div>
      </div>
      
      <div class="form-group  is-valid">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" placeholder="upload your Image" required />
      </div>

      <div class="form-group  is-valid">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="Enter the price" min="0" required />
        <div class="invalid-feedback">
          please provide a valid price
          </div>
      </div>
      <div class="form-group  is-valid">
        <label for="location">Location</label>
        <input type="text" id="location" name="location" placeholder="Enter the current location" required />
        <div class="invalid-feedback">
          please provide your location
           </div>
      </div>
      <div class="form-group  is-valid">
        <label for="country">Country</label>
        <input type="text" id="country" name="country" placeholder="Enter your country name" required />
        <div class="invalid-feedback">
          please provide your country
           </div>
      </div>
      <div class="form-grou  is-valid">
        <button type="submit" class="btn-submit">Add Listing</button>
      </div>
    </form>
  </div>
  <script src="/js/formValidation.js"></script>
</body>

