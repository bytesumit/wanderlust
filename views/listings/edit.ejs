<% layout('./layouts/boilerplate.ejs')%>
    <body>
        <div class="form-container">
          <h1>Update your Listing</h1>
          <form method="post" action="/listing/<%= user._id %>?_method=PATCH" 
            class="listing-form needs-validation" novalidate enctype="multipart/form-data">
            
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" value="<%=user.title %>" name="title" placeholder="Enter title" required />
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea id="description" name="description" placeholder="Add description" rows="4" required><%=user.description%></textarea>
            </div>
            <div class="form-group">
              <label for="image">Your Image</label> <br>
             <img src="<%= originalImage %> " height="120px" width="120px" alt="image" />
            </div>
            <div class="form-group">
              <label for="image">Upload New Image</label>
              <input type="file" id="image" name="image" />
            </div>
            <div class="form-group">
              <label for="price">Price</label>
              <input type="number" id="price" name="price" value="<%= user.price %>" placeholder="Enter the price" min="0" required />
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <input type="text" id="location" name="location" value="<%=user.location %>" placeholder="Enter the current location" required />
            </div>
            <div class="form-group">
              <label for="country">Country</label>
              <input type="text" id="country" name="country"  value="<%=user.country %>" placeholder="Enter your country name" required />
            </div>
            <div class="form-group">
              <button type="submit"   class="btn-submit">Update Listing</button>
            </div>
          </form>
        </div>
        <!--  -->
      </body> 
